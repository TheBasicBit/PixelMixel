{
    "deno.enable": true,
    "deno.config": "./deno.jsonc",

    "liveServer.settings.root": "/public/",
    "liveServer.settings.wait": 1000,
    "liveServer.settings.port": 5500,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,

        "server/bin/**": false,
        "server/obj/**": true,
        "**/*.csproj": true
    }
}
